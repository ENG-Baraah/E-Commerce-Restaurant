

@page
@model TasteRestaurant.Pages.Order.OrderPickupModel
@using TasteRestaurant.Utility
@{
    ViewData["Title"] = "OrderPickup";
}
<h2>تسليم الطلب</h2>
<form method="get" asp-page="OrderPickUp">
    @* We will add Search Functionality here *@
    <div style="height:60px;">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <label class="radio-inline">
                        @Html.RadioButton("option", "name") الاسم
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "email")الايميل 
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "phone") الهاتف
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "order") رقم الطلب
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span> البحث عن الطلب
                    </button>
                </div>
                <div class="pull-right">
                    @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    <hr />
    <br />
    @if (Model.OrderDetailsViewModel.Count > 0)
    {
        @foreach (var item in Model.OrderDetailsViewModel)
        {
            <div class="thumbnail row">
                @Html.Partial("_IndividualOrderDetails", item)
                <div class="col-sm-2">
                    @if (item.OrderHeader.Status.Equals(SD.StatusReady))
                    {
                        <a asp-page="OrderPickupDetails" asp-route-orderId="@item.OrderHeader.Id" class="btn btn-success">
                            <span class="glyphicon glyphicon-list"></span>
                            تفاصيل التسليم
                        </a>
                    }
                    else
                    {
                        <button type="submit" disabled class="btn btn-primary">@item.OrderHeader.Status</button>
                    }
                </div>
            </div>

        }
    }
    else
    {
        <p> لا يوجد طلبات متاحه ...</p>
    }
</form>




















